@model Travel.Models.ImgTour

@{
    ViewData["Title"] = "Chỉnh sửa";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-action="Index" asp-controller="Home" asp-area="admin" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Trang chủ quản trị</a>
            <a asp-action="Index" asp-controller="AdminImgTours" asp-area="admin" class="breadcrumb-item"><i class="anticon anticon-fire"></i> Hình ảnh Tour</a>
            <span class="breadcrumb-item active"><i class="anticon anticon-edit"></i> @ViewData["Title"]</span>
        </nav>
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ImgTourId" />
            
            <div class="form-group">
                <label asp-for="TourId" class="control-label">TourID</label>
                <input asp-for="TourId" class="form-control" />
                <span asp-validation-for="TourId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Hình ảnh</label>
                <input name="fThumb" type="file" class="form-control-file" asp-for="Description" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>


            <div class="form-row">
                <div class="btn-group">
                    <button class="btn btn-success btn-tone m-r-5">
                        <i class="anticon anticon-save"></i>
                        <span>Lưu</span>
                    </button>

                    <a class="btn btn-primary btn-tone m-r-5" asp-area="Admin" asp-controller="AdminImgTours" asp-action="Index">
                        <i class="anticon anticon-backward"></i> Trở lại
                    </a>
                </div>
            </div>

        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

